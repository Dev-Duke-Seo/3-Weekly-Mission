{
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  // eslint용 바벨 파서 사용하기
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "babelrc": false,
      "configFile": false,
      // your babel options
      "presets": ["@babel/preset-react"]
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": ["@typescript-eslint", "prettier", "react", "import"],
  "rules": {
    "prettier/prettier": ["error"],
    // 들여쓰기 off해서 prettier로 설정하기
    "indent": "off",
    "react/react-in-jsx-scope": "off",
    // 함수 선언 방식
    "react/function-component-definition": [1, { "namedComponents": ["arrow-function", "function-expression"] }],
    // PropType 강제하기
    "react/prop-types": "off",
    // jsx확장자 파일에서만 jsx를 사용하게 하기
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    // export defalut 에러 없애기
    "import/prefer-default-export": "off",
    // import 확장자 에러 없애기
    "import/extensions": "off",
    "import/no-named-as-default": "off",
    "no-unused-vars": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
