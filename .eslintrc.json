{
  "env": {
    "browser": true // document, window 등의 브라우저 내장 객체 조회 가능하도록 설정
  },
  "extends": [
    "plugin:prettier/recommended", // eslint-config-prettier 라이브러리 적용하여 Prettier에 관련된 규칙을 사용합니다.
    "airbnb" // eslint-config-airbnb 라이브러리 적용하여 Airbnb 스타일 가이드에 따라 규칙을 설정합니다.
  ],
  // npm i -D @babel/eslint-parser @babel/preset-react
  // 최신 ECMA 버전을 사용할 수 있게 설정
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "babelOptions": {
      "babelrc": false,
      "configFile": false,
      "presets": ["@babel/preset-react"]
    }
  },
  "plugins": ["prettier"], // Prettier와 관련된 플러그인을 사용합니다.
  "rules": {
    "linebreak-style": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "endOfLine": "auto"
      }
    ], // Prettier에 대한 규칙을 활성화하고, 코드 스타일이 Prettier와 일치하지 않으면 에러를 발생시킵니다.
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off", // react 17 이후면 불필요한 규칙이므로 off
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": false }
    ],
    "indent": "off",
    "implicit-arrow-linebreak": "off",
    "operator-linebreak": "off",
    "react/jsx-one-expression-per-line": "off",
    "object-curly-newline": "off",
    "no-alert": "off"
  }
}
