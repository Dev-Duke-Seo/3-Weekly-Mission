{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@/*": ["/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["lib/utils/*"],
      "@hooks/*": ["hooks/*"],
      "@api/*": ["api/*"],
      "@layout/*": ["shared/layout/*"],
      "@routes/*": ["shared/routes/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
